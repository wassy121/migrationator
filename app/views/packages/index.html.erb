<% @packages.each do |package| %>
  <tr>
    <td><%= package.pkgtype %></td>
    <td><%= package.name %></td>
    <td><%= package.version %></td>
    <td><%= link_to 'Edit', edit_server_package_path(@server, package) %></td>
    <td><%= link_to 'Destroy', [@server, package], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

